 
<%- include('../partials/header') %>
<div class="container">
    <h1>Edit Article</h1>
    <form action="/admin/edit-article/<%= article.id %>" method="POST" class="form">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= article.title %>" required>
        </div>
        <div class="form-control">
            <label for="date">Publication Date</label>
            <input type="date" id="date" name="date" value="<%= article.date %>" required>
        </div>
        <div class="form-control">
            <label for="content">Content</label>
            <textarea id="content" name="content" rows="10" required><%= article.content %></textarea>
        </div>
        <button type="submit" class="btn">Update Article</button>
    </form>
</div>
<%- include('../partials/footer') %>


